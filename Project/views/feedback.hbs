<link rel="stylesheet" href="css/feedback.css">
<form class="feedback-form">
  <h2 class="feedback-form__title">Обратная связь</h2>
  <div class="feedback-form__group">
    <label for="name" class="feedback-form__label">Имя</label>
    <input type="text" id="name" class="feedback-form__input" placeholder="Введите ваше имя" required>
    <p>Пример: Артур</p>
  </div>
  <div class="feedback-form__group">
    <label for="email" class="feedback-form__label">Email</label>
    <input type="email" id="email" class="feedback-form__input" placeholder="Введите ваш email" required>
    <p>Пример: name@mail.ru</p>
  </div>
  <div class="feedback-form__group">
    <label for="phone" class="feedback-form__label">Телефон</label>
    <input type="tel" id="phone" class="feedback-form__input" placeholder="Введите ваш телефон" required>
    <p>Прмиер: +7 (999) 999-99-99</p>
  </div>
  <div class="feedback-form__group">
    <label for="message" class="feedback-form__label">Сообщение</label>
    <textarea id="message" class="feedback-form__textarea" placeholder="Введите ваше сообщение" required></textarea>
  </div>
  <button type="submit" class="feedback-form__submit">Отправить</button>
</form>

<script src="https://unpkg.com/imask"></script>
<script src="js/feedback.js"></script>